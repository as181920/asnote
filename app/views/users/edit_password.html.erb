<%= form_tag update_password_user_path(current_user) do %>
  <%= label_tag("user[old_password]", "old_password") %><%= password_field_tag("user[old_password]", "") %>
  <BR/>
  <%= label_tag("user[new_password]", "new_password") %><%= password_field_tag("user[new_password]", "") %>
  <BR/>
  <%= label_tag("user[new_password_confirmation]", "new_password_confirmation") %><%= password_field_tag("user[new_password_confirmation]", "") %>

  <br/>
  <%= submit_tag("更新") %>
<% end %>

